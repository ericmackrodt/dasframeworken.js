{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es6",
            "es5",
            "es2015",
            "dom",
            "dom.iterable"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "allowJs": true,
        "outDir": "./build",
        "sourceMap": true,
        "baseUrl": "./src"
    },
    "include": [
        "src/dasframeworken.d.ts",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true,
        "useTranspileModule": true
    }
}